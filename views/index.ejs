<div class="author">
  <h1 class="author__heading">Hi, I am Teddy.</h1>
  <p class="author__body">Web developer and future billioniere.</p>
</div>

<img src="/img/hero-new.png" alt="Modern tech blog hero background" class="hero-image" width="981" height="528">

<section class="articles">
  <h2 class="articles__heading">Latest Posts</h2>

  <ul class="article-ul">
    <% data.forEach(post=> { %>
      <li>
        <a href="/post/<%= post._id %>">
          <% if (post.image) { %>
            <div class="article-list__image-container">
              <img src="<%= post.image %>" alt="<%= post.title %>" class="article-list__image">
            </div>
            <% } %>
              <div class="article-list__content">
                <span class="article-list__title">
                  <%= post.title %>
                </span>
                <span class="article-list__date">
                  <%= post.createdAt.toDateString() %>
                </span>
                <p class="article-list__preview">
                  <%= post.body.substring(0, 150) %>...
                </p>
              </div>
        </a>
      </li>
      <% }) %>
  </ul>

  <style>
    .article-ul {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 30px;
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .article-ul li {
      background: #fff;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      height: 100%;
      display: flex;
      flex-direction: column;
    }

    .article-ul li:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    }

    .article-ul li a {
      display: flex;
      flex-direction: column;
      text-decoration: none;
      color: inherit;
      height: 100%;
    }

    .article-list__image-container {
      width: 100%;
      height: 200px;
      overflow: hidden;
      flex-shrink: 0;
    }

    .article-list__image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.5s ease;
    }

    .article-ul li:hover .article-list__image {
      transform: scale(1.1);
    }

    .article-list__content {
      padding: 20px;
      display: flex;
      flex-direction: column;
      flex-grow: 1;
    }

    .article-list__title {
      font-size: 1.25rem;
      font-weight: 700;
      margin-bottom: 10px;
      line-height: 1.4;
      color: #333;
    }

    .article-list__date {
      font-size: 0.85rem;
      color: #888;
      margin-bottom: 10px;
      display: block;
    }

    .article-list__preview {
      font-size: 0.95rem;
      color: #666;
      line-height: 1.6;
      margin: 0;
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
      .article-ul {
        grid-template-columns: 1fr;
        gap: 20px;
      }
    }
  </style>


  <% if (nextPage !==null) { %>
    <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>






</section>